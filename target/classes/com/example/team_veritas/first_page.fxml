<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.team_veritas.ScController">
   <children>
      <ImageView layoutX="-6.0" layoutY="1.0" opacity="0.43" pickOnBounds="true">
         <image>
            <Image url="@Img/o.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="809.0" fitWidth="302.0" layoutX="-1.0" layoutY="-7.0" pickOnBounds="true">
         <image>
            <Image url="@Img/red.png" />
         </image>
      </ImageView>
      <Button fx:id="dashboard" layoutX="99.0" layoutY="171.0" mnemonicParsing="false" onAction="#switchToDashboard" opacity="0.97" style="-fx-background-color: #fc0202;" text="Dashboard" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="23.0" />
         </font>
      </Button>
      <Button fx:id="profile" layoutX="100.0" layoutY="231.0" mnemonicParsing="false" onAction="#switchToProfile" style="-fx-background-color: #fc0202;" text="Profile" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="23.0" />
         </font>
      </Button>
      <Button fx:id="bloodbank" layoutX="97.0" layoutY="292.0" mnemonicParsing="false" onAction="#switchToBank" style="-fx-background-color: #FC0202;" text="Blood Bank" textFill="#fffdfd">
         <font>
            <Font name="System Bold Italic" size="23.0" />
         </font>
      </Button>
      <Button fx:id="donor" layoutX="97.0" layoutY="358.0" mnemonicParsing="false" onAction="#switchToDonor" style="-fx-background-color: FC0202;" text="Donor" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="23.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
